  {{/repeated_string_values}}{{! ------------------------------------------- }}
  {{#repeated_boolean_values}}{{! ------------------------------------------ }}
  { /* Decoding repeated boolean values '{{name}}' */
    unsigned int count = 0u;
    const auto val_array = elem->get_array("{{name}}");
    if (val_array)
