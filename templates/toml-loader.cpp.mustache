      if (! val)
      { throw LoadError("{{table_name}}.{{name}} could not be retrieved as {{type}}"); }
      cfg.{{name}} = *val;
    }
    {{#required}}
    else
    { throw LoadError("Failed to find required element '{{name}}' in table '{{table_name}}'"); }
    {{/required}}
