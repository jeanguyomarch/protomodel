  {{/repeated_boolean_values}}{{! ------------------------------------------ }}
  {{#objects}}{{! ---------------------------------------------------------- }}
  { /* Decoding object '{{name}}' */
    const auto obj_table = elem->get_table("{{name}}");
    if (obj_table)
    {
      cfg.{{name}} = std::make_unique<{{obj_type}}>();
      _load_{{type}}(obj_table, *cfg.{{name}});
    }
    {{#required}}
