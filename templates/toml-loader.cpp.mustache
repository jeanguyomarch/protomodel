      if (! val)
      { throw LoadError("{{table_name}}.{{name}} could not be retrieved as a boolean"); }
      cfg.{{name}} = *val;
    }
    {{#required}}
    else
    { throw LoadError("Failed to find required element '{{name}}' in table '{{table_name}}'"); }
    {{/required}}
  }
  {{/boolean_values}}{{! --------------------------------------------------- }}
  {{#string_values}}{{! ---------------------------------------------------- }}
  { /* Decoding string value '{{name}}' */
    if (elem->contains("{{name}}"))
    {
      const auto val = elem->get_as<std::string>("{{name}}");
      if (! val)
      { throw LoadError("{{table_name}}.{{name}} could not be retrieved as a string"); }
      cfg.{{name}} = *val;
    }
    {{#required}}
    else
    { throw LoadError("Failed to find required element '{{name}}' in table '{{table_name}}'"); }
    {{/required}}
  }
  {{/string_values}}{{! ---------------------------------------------------- }}
  {{#repeated_numerical_values}}{{! ---------------------------------------- }}
  { /* Decoding repeated numerical values '{{name}}' */
    unsigned int count = 0u;
    const auto val_array = elem->get_array("{{name}}");
    if (val_array)
    {
      for (const auto &val_elem : *val_array)
